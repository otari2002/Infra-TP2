pipeline {
  environment {
    registry = "otari2002/infra-tp2"
    registryCredential = 'aff83bb9-5b1a-43b6-9883-844da80fbe49'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git branch: 'main', url: 'https://github.com/otari2002/infra-tp2'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Test image') {
      steps{
        script {
           echo "Tests passed"
        }
      }
    }
    stage('Publish Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Deploy image') {
      steps{
        sh "docker run -d $registry:$BUILD_NUMBER"
      }
    }
  }
}